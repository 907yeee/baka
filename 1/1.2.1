#-----game functions--------
def change_color():
    colorthing = rand.choice(tur_color)
    nerd.fillcolor(colorthing)
    nerd.stamp
def update_score():
    global score # gives this function access to the score that was created above
    score += 1
    score_writer.clear()
    score_writer.write(score, font=font_setup)
def nerd_clicked(x,y):
    global timer_up
    if (not timer_up):
        update_score()
        change_position()
        change_color()
    else:
        nerd.hideturtle
        update_score()
def change_position():
    nerd.penup()
    nerd.hideturtle()
    new_ypos = rand.randint(-150,150)
    new_xpos = rand.randint(-200,200)
    nerd.goto(new_xpos,new_ypos)
    nerd.pendown()
    nerd.showturtle()
def countdown():
    global timer, timer_up
    counter.clear()
    if timer <= 0:
        counter.write("Time's Up", font=font_setup)
        timer_up = True
    else:
        counter.write("Timer: " + str(timer), font=font_setup)
        timer -= 1
        counter.getscreen().ontimer(countdown, counter_interval)
 
#-----events----------------
